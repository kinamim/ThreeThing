<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.threething">

    <!-- Notification & Foreground Service permissions -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" /> <!-- âœ… REQUIRED if using dataSync -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="My Three Thing"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ThreeThing.Splash"
        tools:targetApi="31">

        <receiver
            android:name=".MyThreeThingsWidget"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/my_three_things_widget_info" />
        </receiver>

        <receiver
            android:name=".widget.ToggleTaskReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.example.threething.TOGGLE_TASK" />
            </intent-filter>
        </receiver>

        <service
            android:name=".notification.TaskForegroundService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

        <activity
            android:name=".ui.main.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".notification.TaskActionReceiver"
            android:exported="false" />
    </application>
</manifest>
